<h3><i class="fa fa-angle-right"></i>Profesores</h3>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="content-panel">
                <section id="unseen">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>id</th>
                                <th>Nombre</th>
                                <th>Observaciones</th>
                                <th class="numeric">Area</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>
                              <% @teachers.each do |teacher| %>
                              <tr>
                                <td data-title="Code"><%= teacher.id %></td>
                                <td data-title="Company"><%= teacher.nombre_prof %> 
                                    <%= teacher.apellido_pat_prof %>
                                    <%= teacher.apellido_mat_prof %>
                                </td>
                                <td><%= teacher.observaciones %></td>
                                <td><%= teacher.area %></td>
                                <td><%= link_to teacher do %>
                                    <button class="btn btn-success btn-xs"><i class=" fa fa-check"></i></button>
                                    <% end %>
                                </td>
                                <td><%= link_to edit_teacher_path(teacher) do %>
                                    <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                    <% end %>
                                </td>
                                <td><%= link_to teacher, method: :delete, data: { confirm: 'Â¿Estas seguro?' } do %>
                                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>  
                                    <% end %>
                                </td>
                              </tr>
                            <% end %>
                      </tbody>
                    </table>
                </section>
            </div>
            <div class="showback">
                <%= link_to new_teacher_path do %>
                    <button type="button" class="btn btn-success">Nuevo Profesor</button>
                <% end %>
            </div>
        </div>
    </div>